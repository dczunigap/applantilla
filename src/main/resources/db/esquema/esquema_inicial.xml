<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet author="dzuniga" id="1491957486053-4">
        <createTable catalogName="plantilla_db" schemaName="public" tableName="catalogogeneral">
            <column autoIncrement="true" name="cat_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_catalogogeneral"/>
            </column>
            <column name="cat_codigo" remarks="Clave unica de identificacion del registro." type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="cat_descripcion" remarks="Descripcion detallada del resgistro." type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="cat_identidad" remarks="Identificador unico de relacion con la entidad." type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="cat_activo" remarks="Indicador del registro que controla la disponibilidad." type="bit">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="('now'::text)::date" name="cat_fecharegistro" remarks="Fecha en que se capturo el registro." type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="cat_salidahtml" remarks="Descripicion de uso para la salida en html." type="VARCHAR(200)"/>
            <column name="cat_valor" remarks="Valor numerico para calculos." type="numeric(16, 4)"/>
        </createTable>
    </changeSet>
    <changeSet author="dzuniga" id="1491957486053-5">
        <createTable catalogName="plantilla_db" schemaName="public" tableName="entidad">
            <column autoIncrement="true" name="entidad_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="pk_entidad"/>
            </column>
            <column name="entidad_codigo" remarks="Clave unica de identificacion de la entidad." type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="entidad_tabla" remarks="Nombre de la entidad." type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="('now'::text)::date" name="entidad_fecharegistro" remarks="Fecha en que se capturo el registro." type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="entidad_modelo" remarks="Indicador de que el registro pertenece a una tabla del modelo." type="bit">
                <constraints nullable="false"/>
            </column>
            <column name="entidad_salidahtml" remarks="Descripicion de uso para la salida en html." type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="dzuniga" id="1491957486053-6">
        <createTable catalogName="plantilla_db" remarks="Tabla con los usuarios" schemaName="public" tableName="usuarios">
            <column autoIncrement="true" name="usuario_id" type="SERIAL">
                <constraints primaryKey="true" primaryKeyName="usuarios_pkey"/>
            </column>
            <column name="usuario_nombre" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="usuario_password" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="dzuniga" id="1491957486053-7">
        <addUniqueConstraint catalogName="plantilla_db" columnNames="cat_codigo" constraintName="iuq_cat_codigo" schemaName="public" tableName="catalogogeneral"/>
    </changeSet>
    <changeSet author="dzuniga" id="1491957486053-8">
        <createIndex catalogName="plantilla_db" indexName="iuq_entidad_codigo" schemaName="public" tableName="entidad" unique="true">
            <column name="entidad_codigo"/>
        </createIndex>
    </changeSet>
    <changeSet author="dzuniga" id="1491957486053-9">
        <addForeignKeyConstraint baseColumnNames="cat_identidad" baseTableCatalogName="plantilla_db" baseTableName="catalogogeneral" baseTableSchemaName="public" constraintName="fk_cat_entidad_id" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="entidad_id" referencedTableCatalogName="plantilla_db" referencedTableName="entidad" referencedTableSchemaName="public"/>
    </changeSet>
</databaseChangeLog>
